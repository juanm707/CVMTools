<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1500px"
    android:layout_height="2115px"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="1500px"
        android:layout_height="2115px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="750px"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:layout_marginTop="40px"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:maxLines="1"
                    android:textColor="@color/primaryColorVariant"
                    android:textSize="40px"
                    app:fontFamily="@font/raleway"
                    tools:text="Martinez Vineyard Management" />

                <TextView
                    android:id="@+id/workOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20px"
                    android:fontFamily="@font/raleway"
                    android:text="Work Order"
                    android:textColor="@color/black"
                    android:textSize="40px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/typeAndProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginEnd="20px"
                    android:fontFamily="@font/raleway"
                    android:textColor="@color/primaryColorVariant"
                    android:textSize="40px"
                    app:fontFamily="@font/raleway"
                    tools:text="Fungicide S + Agrimek SC" />

                <TextView
                    android:id="@+id/jobCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20px"
                    android:fontFamily="@font/raleway"
                    android:textColor="@color/black"
                    android:textSize="40px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway"
                    tools:text="270 Fungicide Application" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="20px"
            android:layout_marginEnd="20px"
            android:background="@color/work_order_grey_fill"
            android:fontFamily="@font/raleway"
            android:padding="4px"
            android:textColor="@color/black"
            android:textSize="30px"
            android:textStyle="bold"
            app:fontFamily="@font/raleway"
            tools:text="Date for Application 05/06/2021" />

        <LinearLayout
            android:id="@+id/locationAndTreatedAreaHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="20px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="1000px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:maxLines="1"
                    android:padding="4px"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway"
                    tools:text="Outpost Winery, Angwin, Napa County, CA 95408" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Treated Area"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <TextView
                    android:id="@+id/totalAcres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:gravity="end"
                    android:maxLines="1"
                    android:padding="4px"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway"
                    tools:text="2.55 ac" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blockHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="20px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="750px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Block(s)"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <ListView
                    android:id="@+id/blockList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/block_list_wo_item" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Area"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <ListView
                    android:id="@+id/blockAreaList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/block_list_wo_item" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/productHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="20px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Product(s)"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <ListView
                    android:id="@+id/productList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/block_list_wo_item" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="EPA #"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <ListView
                    android:id="@+id/epaList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/block_list_wo_item" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Purchased Product"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <ListView
                    android:id="@+id/purchasedProductList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/block_list_wo_item" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/extraInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="20px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Tank Size"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <TextView
                    android:id="@+id/tankSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:maxLines="1"
                    android:padding="4px"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway"
                    tools:text="100.00 gal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Tanks"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <TextView
                    android:id="@+id/tanks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:gravity="end"
                    android:maxLines="1"
                    android:padding="4px"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway"
                    tools:text="2.55" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="REI"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <TextView
                    android:id="@+id/rei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:gravity="end"
                    android:maxLines="1"
                    android:padding="4px"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway"
                    tools:text="24 hrs" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Application Method"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <TextView
                    android:id="@+id/applicationMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:gravity="end"
                    android:maxLines="1"
                    android:padding="4px"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway"
                    tools:text="Ground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/work_order_grey_fill"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Special Instructions"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

                <TextView
                    android:id="@+id/specialInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/raleway"
                    android:gravity="end"
                    android:maxLines="1"
                    android:padding="4px"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway"
                    tools:text="Read Chemical Labels!" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/signatureAndDateSignedHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/work_order_grey_fill"
            android:layout_marginStart="20px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="20px"
            android:paddingBottom="50px"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="1000px"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Signature"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:padding="4px"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold"
                    app:fontFamily="@font/raleway" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>