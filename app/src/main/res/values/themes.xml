<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CVMTools" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1B5E20</item>
        <item name="colorPrimaryVariant">#003300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#AFB42B</item>
        <item name="colorSecondaryVariant">#7C8500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline3">@style/TextAppearance.CVMTools.Headline3</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.CVMTools.Headline6</item>
    </style>

    <style name="Theme.CVMTools.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CVMTools.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CVMTools.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>